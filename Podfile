# Global project platform
platform :ios, '11.0'

target 'Studs' do
  # Use dynamic frameworks (Swift - YES)
  use_frameworks!
  # Ignore warnings from pods
  inhibit_all_warnings!

  # Pods for Studs
  pod 'Alamofire', '~> 4.5'
  pod 'SwiftyJSON', '~> 4.0'
  pod '1PasswordExtension', '~> 1.8.5'
  pod 'FirebaseFirestore', '~> 0.10'

  target 'StudsTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
